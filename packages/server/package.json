{
  "name": "server",
  "scripts": {
    "dev": "bun run db:seed:local && wrangler dev",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "dz:studio": "bun run --env-file ./.dev.vars drizzle-kit studio",
    "dz:generate": "bun run --env-file ./.dev.vars drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply ASSETTY_D1 --local",
    "db:migrate:remote": "wrangler d1 migrations apply ASSETTY_D1 --remote",
    "db:seed:local": "wrangler d1 execute ASSETTY_D1 --local --file=./src/db/seed.sql",
    "db:seed:remote": "wrangler d1 execute ASSETTY_D1 --remote --file=./src/db/seed.sql"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.12.0",
    "nanoid": "^5.1.6"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "drizzle-kit": "^0.31.9",
    "wrangler": "^4.67.0"
  }
}
